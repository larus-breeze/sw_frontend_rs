{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "type": "cortex-debug",
        "request": "launch",
        "name": "Debug (OpenOCD)",
        "servertype": "openocd",
        "gdbPath": "/usr/bin/gdb-multiarch",
        "cwd": "${workspaceRoot}",
        "preLaunchTask": "Cargo Build (debug)",
        "runToMain": true,
        "executable": "./target/thumbv7em-none-eabihf/debug/vario",
        "device": "STM32F412ZGT6",
        "configFiles": [
          "interface/stlink.cfg",
          "target/stm32f4x.cfg"
        ],
        "postLaunchCommands": [
          "monitor rtt server start 8765 0",
          // should span the *right* part of RAM
          // get address $ rust-nm -S target/thumbv7*/debug/blinky | grep RTT
          "monitor rtt setup 0x20000000 0x30 \"SEGGER RTT\"",
          "monitor rtt start",
      ],

        "svdFile": "${workspaceRoot}/STM32F412.svd",
      },
      {
        "type": "cortex-debug",
        "request": "launch",
        "name": "Run (OpenOCD)",
        "servertype": "openocd",
        "cwd": "${workspaceRoot}",
        "preLaunchTask": "Cargo Build (release)",
        "runToMain": true,
        "executable": "./target/thumbv7em-none-eabihf/release/vario",
        "device": "STM32F412ZGT6",
        "configFiles": [
          "interface/stlink.cfg",
          "target/stm32f4x.cfg"
        ],
        "svdFile": "${workspaceRoot}/STM32F412.svd",
      },
    ]
  }